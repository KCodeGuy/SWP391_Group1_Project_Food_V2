<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>HomeController</servlet-name>
        <servlet-class>controller.HomeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadListProductInCartController</servlet-name>
        <servlet-class>controller.LoadListProductInCartController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddProductIntoCartFromHome</servlet-name>
        <servlet-class>controller.AddProductIntoCartFromHome</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadUserProfileController</servlet-name>
        <servlet-class>controller.LoadUserProfileController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddProductIntoCartFromProductDetail</servlet-name>
        <servlet-class>controller.AddProductIntoCartFromProductDetail</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteProductInCartController</servlet-name>
        <servlet-class>controller.DeleteProductInCartController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadStaffProfileController</servlet-name>
        <servlet-class>controller.LoadStaffProfileController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeController</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadListProductInCartController</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddProductIntoCartFromHome</servlet-name>
        <url-pattern>/addproductintocartfromhome</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadUserProfileController</servlet-name>
        <url-pattern>/loaduserprofile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddProductIntoCartFromProductDetail</servlet-name>
        <url-pattern>/addproductintocartfromproductdetails</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteProductInCartController</servlet-name>
        <url-pattern>/deleteproductincart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadStaffProfileController</servlet-name>
        <url-pattern>/loadstaffprofile</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
